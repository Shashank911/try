export const commentPost = async (req, res) => {
  const { id } = req.params;
  const { value } = req.body;

  const newComment = {
    userId: req.userId,
    text: value,
  };

  try {
    const updatedPost = await Post.findByIdAndUpdate(
      id,
      { $push: { comments: newComment } },
      { new: true }
    );

    res.json(updatedPost);
  } catch (error) {
    console.error(error);
    res.status(500).json({ message: 'Failed to add comment' });
  }
};
